<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:models="clr-namespace:GostosoDemaisApp.Models"
    x:Class="GostosoDemaisApp.Views.MyRecipesList"
    Title="Minhas Receitas"
    BackgroundColor="#f4f4f4">

    <StackLayout
        Orientation="Vertical"
        Margin="15">

        <Button
            x:Name="btnRegister"
            Text="VER RECEITAS ONLINE"
            CornerRadius="5"
            BackgroundColor="#2c84f0" 
                TextColor="#fff"
                FontAttributes="Bold"
                FontSize="18"
                Margin="0, 0, 0 ,10"
            Clicked="btnRegister_Clicked"></Button>

        <StackLayout  HorizontalOptions="FillAndExpand">
            <Label
                Text="Minhas Receitas Salvas"
                HorizontalTextAlignment="Center"
                HorizontalOptions="FillAndExpand"
                TextColor="#000"
                FontAttributes="Bold"
                FontSize="24"
                Margin="0,15,0,15"
                ></Label>

            <Label
                x:Name="lblNoRecipesFound"
                Text="Nenhuma receita salva, consulte agora uma receita para salvar no dispositivo."
                HorizontalTextAlignment="Center"
                HorizontalOptions="FillAndExpand"
                TextColor="#000"
                FontSize="14"
                Margin="20,40,20,40"
                FontAttributes="None"></Label>

            <ListView
                x:Name="ListViewMyRecipes"
                ItemsSource="{Binding myRecipes}"
                HasUnevenRows="true"
                ItemTapped="ListViewMyRecipes_ItemTapped"
               >
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:Recipe">
                        <ViewCell>
                            <Frame
                                BackgroundColor="#fff"
                                Margin="0,0,0,7"
                                BorderColor="#d5d5d5"
                                HasShadow="True"
                                CornerRadius="5"
                                Padding="10">
                                <StackLayout
                                    Orientation="Horizontal">
                                    <Image Source="cook.png"
                                           WidthRequest="60"
                                           Margin="0,5,0,10"
                                           VerticalOptions="StartAndExpand"/>
                                    <StackLayout
                                    Orientation="Vertical"
                                    HorizontalOptions="StartAndExpand"
                                    VerticalOptions="FillAndExpand">
                                        <Label
                                        FontSize="17"
                                        FontAttributes="Bold"
                                        TextColor="#000"
                                        Text="{Binding Name}"
                                        HorizontalOptions="FillAndExpand"
                                        />
                                        <Label
                                        FontSize="14"
                                        TextColor="#000"
                                        Text="{Binding Ingredients}"
                                        />
                                        <Label
                                            FontAttributes="Bold"
                                            FontSize="17"
                                            TextColor="Black"
                                            IsVisible="{Binding IsFavorite}"
                                            Text="⭐ RECEITA FAVORITA!"></Label>
                                
                                    </StackLayout>
                                </StackLayout>
                                
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</ContentPage>
